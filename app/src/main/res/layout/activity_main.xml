<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="korablique.recipecalculator.MainActivity">

    <Button
        android:id="@+id/button_list_of_recipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_of_recipes"
        android:textAlignment="textStart"
        android:layout_gravity="start" />

    <Button
        android:id="@+id/button_recipe_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_list_of_recipes"
        android:text="@string/recipe_calculator"
        android:textAlignment="textStart"
        android:layout_gravity="start" />
</RelativeLayout>
