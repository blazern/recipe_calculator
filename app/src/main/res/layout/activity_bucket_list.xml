<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_view_with_cancel_button"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/recipe_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        android:maxLines="1"
        style="@style/MontserratHeaderText"
        android:hint="@string/recipe_name"/>

    <LinearLayout
        android:id="@+id/summary_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/recipe_name_edit_text" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/RobotoMonoBoldText"
            android:text="@string/future_recipe_nutrition"/>
        <include
            layout="@layout/nutrition_progress_with_values"
            android:id="@+id/nutrition_progress_with_values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/total_weight_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/summary_layout">

        <TextView
            android:id="@+id/weight_text_view"
            style="@style/RobotoMonoHintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.30"
            android:layout_marginStart="22dp"
            android:paddingTop="18dp"
            android:text="@string/result_weight"
            app:layout_constraintTop_toBottomOf="@id/summary_layout"/>

        <korablique.recipecalculator.ui.calckeyboard.CalcEditText
            android:id="@+id/total_weight_edit_text"
            style="@style/RobotoMonoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="8dp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:maxLength="30"
            custom:max_value="99999"
            custom:digits_after_decimal_dot="1"
            tools:text="100"
            app:layout_constraintTop_toBottomOf="@+id/weight_text_view" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ingredients_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#EFF1F6"
        app:layout_constraintBottom_toTopOf="@+id/actions_layout"
        app:layout_constraintTop_toBottomOf="@+id/total_weight_layout"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <LinearLayout
        android:id="@+id/actions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFF1F6"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent" >
        <Button
            android:id="@+id/save_as_recipe_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            style="@style/VioletButton"
            android:text="@string/save_recipe"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>