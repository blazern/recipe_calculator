<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@color/colorAccent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/summary_layout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_text"
            style="@style/MontserratText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/selected_foodstuffs"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="48dp" />

        <ImageView
            android:id="@+id/button_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_close_white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/summary_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/title_layout" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_mono"
            android:textStyle="bold"
            android:textColor="#FF373B4F"
            android:textSize="14sp"
            android:text="@string/selected_foodstuffs_summary"/>
        <include
            layout="@layout/nutrition_progress_with_values"
            android:id="@+id/nutrition_progress_with_values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp" />
        <TextView
            android:id="@+id/total_weight_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/roboto_mono"
            android:textStyle="bold"
            android:textColor="#FF373B4F"
            android:textSize="14sp"
            android:paddingBottom="20dp"
            android:text="@string/weight_is_n_gramms"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/foodstuffs_list_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#EFF1F6"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/actions_layout"
        app:layout_constraintTop_toBottomOf="@+id/summary_layout" >
        <Button
            android:id="@+id/edit_bucket_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_selected_foodstuffs"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:fontFamily="@font/roboto_mono"
            android:textAllCaps="false"
            android:background="@android:color/transparent"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/foodstuffs_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFF1F6"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent" >
        <Button
            android:id="@+id/save_as_single_foodstuff_button"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            style="@style/VioletLiningButton"
            android:text="@string/save_as_dish"/>
        <Button
            android:id="@+id/save_to_history_button"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            style="@style/VioletButton"
            android:text="@string/add_to_history"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>