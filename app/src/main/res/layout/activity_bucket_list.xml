<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/colorAccent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/summary_layout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_text"
            style="@style/MontserratText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/selected_foodstuffs"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="48dp" />

        <ImageView
            android:id="@+id/button_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_close_white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/summary_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/title_layout" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_mono"
            android:textStyle="bold"
            android:textColor="#FF373B4F"
            android:textSize="14sp"
            android:text="@string/selected_foodstuffs_summary"/>
        <include
            layout="@layout/nutrition_progress_with_values"
            android:id="@+id/nutrition_progress_with_values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/total_weight_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/summary_layout">

        <TextView
            android:id="@+id/weight_text_view"
            style="@style/RobotoMonoHintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.30"
            android:layout_marginLeft="22dp"
            android:paddingTop="18dp"
            android:text="@string/result_weight"
            app:layout_constraintTop_toBottomOf="@id/summary_layout"/>

        <EditText
            android:id="@+id/total_weight_edit_text"
            style="@style/RobotoMonoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="8dp"
            android:inputType="numberDecimal"
            android:maxLines="1"
            tools:text="100"
            app:layout_constraintTop_toBottomOf="@+id/weight_text_view" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/foodstuffs_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#EFF1F6"
        app:layout_constraintBottom_toTopOf="@+id/actions_layout"
        app:layout_constraintTop_toBottomOf="@+id/total_weight_layout"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    <LinearLayout
        android:id="@+id/actions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFF1F6"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent" >
        <Button
            android:id="@+id/save_as_single_foodstuff_button"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            style="@style/VioletLiningButton"
            android:text="@string/save_as_dish"/>
        <Button
            android:id="@+id/save_to_history_button"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            style="@style/VioletButton"
            android:text="@string/add_to_history"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>