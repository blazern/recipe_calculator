<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--вес-->
    <TextView
        android:id="@+id/weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        style="@style/RobotoMonoHintText"
        android:text="@string/user_weight" />

    <TextView
        android:id="@+id/weight_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/weight"
        app:layout_constraintWidth_percent="0.5"
        style="@style/RobotoMonoText"
        tools:text="47" />

    <!--бёдра-->
    <TextView
        android:id="@+id/hips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/weight_value"
        app:layout_constraintWidth_percent="0.5"
        style="@style/RobotoMonoHintText"
        android:text="@string/hips" />

    <TextView
        android:id="@+id/hips_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hips"
        app:layout_constraintWidth_percent="0.5"
        style="@style/RobotoMonoText"
        tools:text="90" />

    <!--талия-->
    <TextView
        android:id="@+id/waist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/weight"
        app:layout_constraintWidth_percent="0.5"
        style="@style/RobotoMonoHintText"
        android:text="@string/waist" />

    <TextView
        android:id="@+id/waist_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/waist"
        app:layout_constraintStart_toStartOf="@id/waist"
        app:layout_constraintWidth_percent="0.5"
        style="@style/RobotoMonoText"
        tools:text="60" />

    <!--грудь-->
    <TextView
        android:id="@+id/chest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/hips"
        app:layout_constraintTop_toTopOf="@id/hips"
        app:layout_constraintWidth_percent="0.5"
        style="@style/RobotoMonoHintText"
        android:text="@string/chest" />

    <TextView
        android:id="@+id/chest_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/chest"
        app:layout_constraintStart_toStartOf="@id/chest"
        app:layout_constraintWidth_percent="0.5"
        style="@style/RobotoMonoText"
        tools:text="89" />
</androidx.constraintlayout.widget.ConstraintLayout>