<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calc_keyboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="5dp">

    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EFF1F6"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/button_bracket_left"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/top_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_bracket_right"
        app:layout_constraintBottom_toTopOf="@id/button_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:src="@drawable/ic_calc_keyboard_left_bracket_selector"
        android:background="@null" />
    <ImageButton
        style="@style/RobotoMonoText"
        android:id="@+id/button_bracket_right"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/top_line"
        app:layout_constraintLeft_toRightOf="@id/button_bracket_left"
        app:layout_constraintRight_toLeftOf="@id/button_divide"
        app:layout_constraintBottom_toTopOf="@id/button_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:src="@drawable/ic_calc_keyboard_right_bracket_selector"
        android:background="@null" />
    <ImageButton
        android:id="@+id/button_divide"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/top_line"
        app:layout_constraintBottom_toTopOf="@id/button_minus"
        app:layout_constraintLeft_toRightOf="@id/button_bracket_right"
        app:layout_constraintRight_toLeftOf="@id/button_multiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:src="@drawable/ic_calc_keyboard_divide_selector"
        android:background="@null"/>
    <ImageButton
        android:id="@+id/button_multiply"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/top_line"
        app:layout_constraintBottom_toTopOf="@id/button_minus"
        app:layout_constraintLeft_toRightOf="@id/button_divide"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/ic_calc_keyboard_multiply_selector"
        android:background="@null" />

    <TextView
        style="@style/RobotoMonoText"
        android:id="@+id/button_1"
        app:layout_constraintTop_toBottomOf="@+id/button_multiply"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="26sp"
        android:textColor="#373B4F"
        android:background="@drawable/button_background"
        android:text="1" />
    <TextView
        style="@style/RobotoMonoText"
        android:id="@+id/button_2"
        app:layout_constraintTop_toBottomOf="@+id/button_multiply"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/button_1"
        app:layout_constraintRight_toLeftOf="@id/button_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="26sp"
        android:textColor="#373B4F"
        android:background="@drawable/button_background"
        android:text="2" />
    <TextView
        style="@style/RobotoMonoText"
        android:id="@+id/button_3"
        app:layout_constraintTop_toBottomOf="@+id/button_multiply"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/button_2"
        app:layout_constraintRight_toLeftOf="@id/button_minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="26sp"
        android:textColor="#373B4F"
        android:background="@drawable/button_background"
        android:text="3" />
    <ImageButton
        android:id="@+id/button_minus"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/button_multiply"
        app:layout_constraintBottom_toTopOf="@id/button_plus"
        app:layout_constraintLeft_toRightOf="@id/button_3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:src="@drawable/ic_calc_keyboard_minus_selector"
        android:background="@null" />

    <TextView
        style="@style/RobotoMonoText"
        android:id="@+id/button_4"
        app:layout_constraintTop_toBottomOf="@+id/button_1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="26sp"
        android:textColor="#373B4F"
        android:background="@drawable/button_background"
        android:text="4" />
    <TextView
        style="@style/RobotoMonoText"
        android:id="@+id/button_5"
        app:layout_constraintTop_toBottomOf="@+id/button_1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/button_4"
        app:layout_constraintRight_toLeftOf="@id/button_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="26sp"
        android:textColor="#373B4F"
        android:background="@drawable/button_background"
        android:text="5" />
    <TextView
        style="@style/RobotoMonoText"
        android:id="@+id/button_6"
        app:layout_constraintTop_toBottomOf="@+id/button_1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/button_5"
        app:layout_constraintRight_toLeftOf="@+id/button_plus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="26sp"
        android:textColor="#373B4F"
        android:background="@drawable/button_background"
        android:text="6" />
    <ImageButton
        android:id="@+id/button_plus"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/button_1"
        app:layout_constraintLeft_toRightOf="@id/button_6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_calc_keyboard_plus_selector"
        android:background="@null"/>

    <TextView
        style="@style/RobotoMonoText"
        android:id="@+id/button_7"
        app:layout_constraintTop_toBottomOf="@+id/button_4"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="26sp"
        android:textColor="#373B4F"
        android:background="@drawable/button_background"
        android:text="7" />
    <TextView
        style="@style/RobotoMonoText"
        android:id="@+id/button_8"
        app:layout_constraintTop_toBottomOf="@+id/button_4"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/button_7"
        app:layout_constraintRight_toLeftOf="@id/button_9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="26sp"
        android:textColor="#373B4F"
        android:background="@drawable/button_background"
        android:text="8" />
    <TextView
        style="@style/RobotoMonoText"
        android:id="@+id/button_9"
        app:layout_constraintTop_toBottomOf="@+id/button_4"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/button_8"
        app:layout_constraintRight_toLeftOf="@+id/button_plus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="26sp"
        android:textColor="#373B4F"
        android:background="@drawable/button_background"
        android:text="9" />

    <TextView
        style="@style/RobotoMonoText"
        android:id="@+id/button_point"
        app:layout_constraintTop_toBottomOf="@+id/button_7"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="26sp"
        android:textColor="#373B4F"
        android:background="@drawable/button_background"
        android:text="." />
    <TextView
        style="@style/RobotoMonoText"
        android:id="@+id/button_0"
        app:layout_constraintTop_toBottomOf="@+id/button_7"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/button_point"
        app:layout_constraintRight_toLeftOf="@id/button_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="26sp"
        android:textColor="#373B4F"
        android:background="@drawable/button_background"
        android:text="0" />
    <ImageButton
        android:id="@+id/button_delete"
        app:layout_constraintTop_toBottomOf="@+id/button_7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/button_0"
        app:layout_constraintRight_toLeftOf="@+id/button_enter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/ic_calc_keyboard_delete_selector"
        android:background="@null"/>
    <ImageButton
        android:id="@+id/button_enter"
        app:layout_constraintTop_toBottomOf="@+id/button_7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/button_delete"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/ic_calc_keyboard_enter_selector"
        android:background="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>