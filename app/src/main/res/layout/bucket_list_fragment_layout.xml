<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/weight_text_view"
        style="@style/RobotoMonoHintText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.30"
        android:layout_marginLeft="22dp"
        android:paddingTop="18dp"
        android:text="@string/result_weight" />

    <EditText
        android:id="@+id/total_weight_edit_text"
        style="@style/RobotoMonoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="16dp"
        android:inputType="numberDecimal"
        android:maxLines="1"
        tools:text="100"
        app:layout_constraintTop_toBottomOf="@+id/weight_text_view" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/foodstuffs_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#EFF1F6"
        app:layout_constraintBottom_toTopOf="@+id/actions_layout"
        app:layout_constraintTop_toBottomOf="@+id/total_weight_edit_text"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    <LinearLayout
        android:id="@+id/actions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFF1F6"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent" >
        <Button
            android:id="@+id/save_as_single_foodstuff_button"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            style="@style/VioletLiningButton"
            android:text="@string/save_as_dish"/>
        <Button
            android:id="@+id/save_to_history_button"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            style="@style/VioletButton"
            android:text="@string/add_to_history"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>