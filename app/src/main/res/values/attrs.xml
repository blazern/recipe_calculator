<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ViewGroupWithMaxHeight">
        <attr name="max_weight" format="float" />
    </declare-styleable>

    <declare-styleable name="PluralProgressBar">
        <attr name="corners_radii" format="dimension"/>
        <attr name="color0" format="color"/>
        <attr name="color1" format="color"/>
        <attr name="color2" format="color"/>
        <attr name="color3" format="color"/>
        <attr name="color4" format="color"/>
        <attr name="color5" format="color"/>
        <attr name="color6" format="color"/>
        <attr name="color7" format="color"/>
        <attr name="color8" format="color"/>
        <attr name="color9" format="color"/>
        <attr name="background_bar_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="EditProgressText" parent="CalcEditText">
        <attr name="color_underline_filled" format="color"/>
        <attr name="color_underline_empty_focused" format="color"/>
        <attr name="progress_max_value" format="float"/>
        <!--Override Android's common attributes for easier use in code-->
        <attr name="android:colorControlNormal"/>
        <attr name="android:background"/>
    </declare-styleable>

    <declare-styleable name="CalcEditText">
        <attr name="min_value" format="float"/>
        <attr name="max_value" format="float"/>
    </declare-styleable>
</resources>