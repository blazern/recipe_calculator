<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorPrimaryDark">@android:color/white</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="MontserratHeaderText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">#373B4F</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MontserratBigWhiteText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MontserratBoldProgress" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoMonoText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textColor">#373B4F</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoMonoBoldText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#373B4F</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoMonoHintText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textColor">#FF9B9DA7</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="VioletButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:stateListAnimator">@animator/copy_of_mtrl_btn_state_list_anim</item>
        <item name="elevation">@dimen/copy_of_mtrl_btn_elevation</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="VioletLiningButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textSize">14sp</item>
        <item name="android:stateListAnimator">@animator/copy_of_mtrl_btn_state_list_anim</item>
        <item name="elevation">@dimen/copy_of_mtrl_btn_elevation</item>
        <item name="android:letterSpacing">0</item>
        <item name="strokeColor">#FF5768E9</item>
        <item name="backgroundTint">#EFF1F6</item>
    </style>

    <style name="MainScreenSnackbarTextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">Roboto Mono</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MainScreenSnackbarCircleText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">Roboto Mono</item>
        <item name="android:textColor">#FFF9F9FB</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>

