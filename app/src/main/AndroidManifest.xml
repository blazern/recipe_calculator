<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="korablique.recipecalculator">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BroccalcApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.foodstuffslist.ListOfFoodstuffsActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="korablique.recipecalculator.FIND_FOODSTUFF_ACTION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="f8e3ec4d634763d9b91038aef3b8cf9c8c0a65d9" />

        <activity android:name=".ui.history.HistoryActivity" />
        <activity
            android:name=".ui.mainscreen.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.bucketlist.BucketListActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />

        <receiver android:name=".ui.notifications.FoodReminderReceiver" />

        <activity
            android:name=".ui.editfoodstuff.EditFoodstuffActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.usergoal.UserParametersActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
    </application>

</manifest>